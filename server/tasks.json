{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-I", 
                "/usr/include/mysql-cppconn-8/", 
                "-I",
                "${fileDirname}/include",
                "-L", 
                "/usr/lib64/", 
                "-g",
                "./include/db_operations.cpp",
                "./include/Server.cpp",
                "main.cpp",
                "-o",
                "${fileBasenameNoExtension}", 
                "-lmysqlcppconn8",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}